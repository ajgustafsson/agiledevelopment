<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="se.chalmers.agile5"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="11"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">
        <activity
            android:name=".activities.MyActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserStoriesActivity"
            android:label="@string/title_activity_user_stories"
            android:parentActivityName="se.chalmers.agile5.activities.PivotalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.agile5.activities.PivotalActivity"/>
        </activity>

        <activity
            android:configChanges="orientation|screenSize"
            android:name=".activities.PlanningPoker"
            android:label="@string/title_activity_planning_poker"
            android:parentActivityName="se.chalmers.agile5.activities.MyActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity 
            android:name=".activities.GitLoginActivity"
            android:parentActivityName="se.chalmers.agile5.activities.MyActivity"
            android:launchMode="singleTop"
            />
        <activity 
            android:name=".activities.GitSelectActivity"
            android:parentActivityName="se.chalmers.agile5.activities.GitLoginActivity"
            />
        <activity 
            android:name=".activities.PivotalActivity"
            android:parentActivityName="se.chalmers.agile5.activities.PivotalActivity"
			android:launchMode="singleTop"
            />
    </application>
</manifest>
